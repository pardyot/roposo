<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pardyot.roposo.StoryDescription">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/story_image"
                android:layout_width="match_parent"
                android:layout_height="380dp" />
            <View
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:background="@drawable/gradient_below"
                android:layout_height="48dp"/>
            <TextView
                tools:text="Title"
                android:id="@+id/title"
                android:textSize="22sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_above"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <com.example.pardyot.roposo.RoundedImageView
                android:id="@+id/author_image"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="64dp"
                android:layout_height="64dp" />
            <LinearLayout
                android:layout_toRightOf="@+id/author_image"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/author"
                    android:textColor="#fff"
                    tools:text="author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/follow_info"
                    tools:text="followers and following"
                    android:textColor="#fff"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:id="@+id/like"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/like1"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/not_like"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/not_like"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/follow"
                android:text="Follow"
                android:textColor="#4d4d33"
                android:textSize="10sp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="84dp"
                android:layout_height="32dp" />
            <TextView
                android:id="@+id/verb"
                tools:text="created On "
                android:layout_below="@+id/like_and_comment"
                android:layout_toLeftOf="@+id/follow"
                android:layout_marginLeft="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/like_and_comment"
                tools:text="likes"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            tools:text="description"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/type"
                android:text="Type : "
                android:layout_toLeftOf="@+id/website"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/website"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Website"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_width="84dp"
                android:layout_height="32dp" />
        </RelativeLayout>

